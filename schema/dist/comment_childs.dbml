// === TABLE DEPENDENCY: projects ===
Table projects {
  id int [pk, increment]
  nama varchar [not null]
  deskripsi text
  tanggal_mulai date
  tanggal_selesai date
}

// === TABLE DEPENDENCY: users ===
Table users {
  id int [pk, increment]
  name varchar [not null]
  email varchar [not null, unique]
  email_verified_at timestamp
  password varchar [not null]
  remember_token varchar
  custom_fields json
  avatar_url varchar
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
  updated_at timestamp [default: `CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP`]
}

// === TABLE DEPENDENCY: statuses ===
Table statuses {
  id int [pk, increment]
  nama varchar
  deskripsi varchar
}

// === TABLE DEPENDENCY: scrum_tasks ===
Table scrum_tasks {
  id int [pk, increment]
  nama varchar
  point int
  deskripsi text
  status_id int [ref: > statuses.id]
  prioritas prioritas
  pic int [ref: > users.id]
  dibuat_oleh int [ref: > users.id]
  project_id int [ref: > projects.id]
  tanggal_mulai date
  tanggal_selesai date
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
  updated_at timestamp [default: `CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP`]
}

// === TABLE DEPENDENCY: comments ===
Table comments {
    id int [pk, increment]
    task_id int [ref: > scrum_tasks.id]
    user_id int [ref: > users.id]
    content text
}

// === ENTITY: comment_childs ===
Table comment_childs{
    id int [pk, increment]
    comment_id int [ref: > comments.id]
    user_id int [ref: > users.id]
    content text
}
