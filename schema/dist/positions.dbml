// === TABLE DEPENDENCY: departments ===
Table departments {
  id int [pk, increment]
  name varchar [not null]
  created_at timestamp [default: `CURRENT_TIMESTAMP`]
  updated_at timestamp [default: `CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP`]
}

// === ENTITY: positions ===
Table positions {
    id int [pk, increment]
    name varchar [not null]
    department_id int [ref: > departments.id]
    created_at timestamp [default: `CURRENT_TIMESTAMP`]
    updated_at timestamp [default: `CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP`]
}

// === RELATION: /relation/sop_positions/sop_positions.dbml ===
Table sop_positions {
    position_id int [ref: > positions.id]
}

// === DIRECT RELATION: /entities/scrum/statuses.dbml ===
Table statuses {
  position_id int [ref: > positions.id]
}

// === DIRECT RELATION: /entities/titles.dbml ===
Table titles {
  position_id int [ref: > positions.id]
}
